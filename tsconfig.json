{
  "extends": "./packages/cli/config/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@deot/dev": ["packages/index/src"],
      "@deot/dev-eslint": ["packages/eslint"],
      "@deot/dev-*": ["packages/*/src"]
    }
  },
  "include": [
    "packages/shims.d.ts",
    "packages/*/__tests__",
    "packages/*/src"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}
