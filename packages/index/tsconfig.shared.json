{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext", "dom"],
    "types": ["vitest/globals", "puppeteer", "node", "eslint"],
    "jsx": "preserve",
    "strict": true,
    "sourceMap": false,
    "declaration": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noEmit": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true
  }
}
