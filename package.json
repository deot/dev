{
  "private": true,
  "version": "1.0.0",
  "description": "custom devs",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "init": "npm install && npm run bootstrap && npm run link",
    "bootstrap": "lerna clean --yes && lerna bootstrap --loglevel silly",
    "pub": "npm run build && lerna publish",
    "pub:no-tag": "npm run pub -- --no-git-tag-version",
    "lint": "esw packages --ext .js,.ts,.jsx,.tsx,.md --color",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch --fix",
    "link": "tsx ./packages/cli/src/index.ts link",
    "dev": "tsx ./packages/cli/src/index.ts dev",
    "build": "tsx ./packages/cli/src/index.ts build",
    "test": "tsx ./packages/cli/src/index.ts test",
    "add": "tsx ./packages/cli/src/index.ts add",
    "bin": "ddc"
  },
  "scripts-info": {
    "init": "首次安装",
    "link": "依赖包关联",
    "add": "创建新包或者给包添加依赖",
    "dev": "开发模式",
    "build": "打包模式",
    "test": "执行测试, 可选择单个包或全部",
    "bin": "调试packages/cli相关指令"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deot/dev.git"
  },
  "author": "deot",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/deot/dev/issues"
  },
  "homepage": "https://github.com/deot/dev#readme",
  "devDependencies": {
    "lerna": "^6.5.1",
    "tsx": "^3.12.5"
  },
  "devDependencies-info": {
    "*": "为了实现0配置，大部分依赖移入cli中"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./scripts/commit-lint"
    }
  },
  "lint-staged": {
    "{packages}/**/*.{js,ts,jsx,tsx,md}": [
      "esw --ext '.js,.ts,.jsx,.tsx,.md' --fix",
      "git add"
    ]
  }
}
